{% set members = craft.users.group('members').all() %}

<div class="box">
    <div class="box__heading box__heading--column">
        <h1>Leden</h1>
    </div>
    <div class="table">
        <div class="table__options">
            <input class="table__search" type="text" placeholder="Search">
        </div>    
        <table class="table__table">
            <thead>
                <tr>
                    <th>Voornaam</th>
                    <th>Famillienaam</th>
                    <th>Lidnummer</th>
                    <th>Lidmaatschap</th>
                    <th>Extra personen</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td>{{member.altFirstName}}</td>
                    <td>{{member.altLastName}}</td>
                    <td>008 {{member.id}}</td>
                    <td></td>
                    <td></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>